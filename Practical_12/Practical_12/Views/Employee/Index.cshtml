﻿@model IEnumerable<Practical_12.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <!-- Card Header -->
        <div class="card-header bg-primary text-white text-center">
            <h3>Employee Records</h3>
        </div>

        <!-- Button Section -->
        <div class="card-body">
            <div class="d-flex justify-content-center flex-wrap gap-3 pb-3">
                @Html.ActionLink("Add First Record", "InsertFirst", null, new { @class = "btn btn-success fw-bold" })
                @Html.ActionLink("Add Multiple For Testing", "InsertMultiplePersons", null, new { @class = "btn btn-success fw-bold" })
                @Html.ActionLink("Update FirstName to SQLPerson", "UpdateFirstName", null, new { @class = "btn btn-info fw-bold" })
                @Html.ActionLink("Update All Middle Names to 'I'", "UpdateAllMiddleName", null, new { @class = "btn btn-info fw-bold" })
                @Html.ActionLink("Delete Record (ID < 2)", "DeleteRecord", null, new { @class = "btn btn-danger fw-bold" })
                @Html.ActionLink("Delete All Records", "DeleteAllRecords", null, new { @class = "btn btn-danger fw-bold" })
            </div>

            <!-- Table Section -->
            <table class="table table-striped table-bordered text-center mt-3">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                        <th>@Html.DisplayNameFor(model => model.MiddleName)</th>
                        <th>@Html.DisplayNameFor(model => model.LastName)</th>
                        <th>@Html.DisplayNameFor(model => model.DOB)</th>
                        <th>@Html.DisplayNameFor(model => model.MobileNumber)</th>
                        <th>@Html.DisplayNameFor(model => model.Address)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                            <td>@Html.DisplayFor(modelItem => item.MiddleName)</td>
                            <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                            <td>@Html.DisplayFor(modelItem => item.DOB)</td>
                            <td>@Html.DisplayFor(modelItem => item.MobileNumber)</td>
                            <td>@Html.DisplayFor(modelItem => item.Address)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>