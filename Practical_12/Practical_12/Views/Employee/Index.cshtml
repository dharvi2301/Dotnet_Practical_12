@model IEnumerable<Practical_12.Models.Employee>

@{
    ViewBag.Title = "Employee Records";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <!-- Header -->
        <div class="card-header bg-primary text-white text-center rounded-top">
            <h3 class="mb-0"><i class="bi bi-person-lines-fill me-2"></i>Employee Records Dashboard</h3>
        </div>

        <!-- Action Buttons -->
        <div class="card-body">
            <div class="text-center mb-4">
                <div class="d-flex flex-wrap justify-content-center gap-3">
                    @Html.ActionLink("➕ Add First Record", "InsertFirst", null, new { @class = "btn btn-success fw-semibold px-4" })
                    @Html.ActionLink("📥 Add Multiple (Test)", "InsertMultiplePersons", null, new { @class = "btn btn-success fw-semibold px-4" })
                    @Html.ActionLink("✏️ Update First Name", "UpdateFirstName", null, new { @class = "btn btn-info fw-semibold px-4" })
                    @Html.ActionLink("📝 Update Middle Names", "UpdateAllMiddleName", null, new { @class = "btn btn-info fw-semibold px-4" })
                    @Html.ActionLink("🗑️ Delete ID < 2", "DeleteRecord", null, new { @class = "btn btn-danger fw-semibold px-4" })
                    @Html.ActionLink("🔥 Delete All Records", "DeleteAllRecords", null, new { @class = "btn btn-danger fw-semibold px-4" })
                </div>
            </div>

            <!-- Employee Table -->
            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle text-center">
                    <thead class="table-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.First().FirstName)</th>
                            <th>@Html.DisplayNameFor(model => model.First().MiddleName)</th>
                            <th>@Html.DisplayNameFor(model => model.First().LastName)</th>
                            <th>@Html.DisplayNameFor(model => model.First().DOB)</th>
                            <th>@Html.DisplayNameFor(model => model.First().MobileNumber)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Address)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => item.FirstName)</td>
                                <td>@Html.DisplayFor(m => item.MiddleName)</td>
                                <td>@Html.DisplayFor(m => item.LastName)</td>
                                <td>@Html.DisplayFor(m => item.DOB)</td>
                                <td>@Html.DisplayFor(m => item.MobileNumber)</td>
                                <td>@Html.DisplayFor(m => item.Address)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
