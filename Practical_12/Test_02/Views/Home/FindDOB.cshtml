﻿
@{
    ViewBag.Title = "FindDOB";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <div class="card-header bg-success text-white text-center">
            <h3>Employees Born Before 01-01-2000</h3>
        </div>

        <div class="card-body text-center">
            <div class="alert alert-warning fw-bold" role="alert">
                <p class="mb-2">List of Employees:</p>
                <ul class="list-group">
                    @if (ViewBag.Employees != null && ViewBag.Employees.Count > 0)
                    {
                        foreach (var employee in ViewBag.Employees)
                        {
                            <li class="list-group-item  fw-bold">@employee</li>
                        }
                    }
                    else
                    {
                        <li class="list-group-item text-muted">No employees found.</li>
                    }
                </ul>
            </div>

            <a href="@Url.Action("Index")" class="btn btn-primary fw-bold">
                Back to Employee List
            </a>
        </div>
    </div>
</div>