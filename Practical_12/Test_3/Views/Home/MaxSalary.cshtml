﻿@{
    ViewBag.Title = "MaxSalary";
}

<h2>Max Salary</h2>

<div class="container mt-5">
    <div class="card shadow-lg p-4">

        <div class="card-header bg-success text-white text-center">
            <h3>Employee(s) with Maximum Salary</h3>
        </div>

        <div class="card-body text-center">
            <div class="alert alert-success fw-bold" role="alert">
                Employee(s) with Maximum Salary:
                @if (ViewBag.EmployeeName != null && ViewBag.EmployeeName.Count > 0)
                {
                    foreach (var item in ViewBag.EmployeeName)
                    {
                        <span class="text-danger">@item , </span>
                    }
                }
                else
                {
                    <span class="text-danger">No data available</span>
                }
            </div>

            <a href="@Url.Action("Index")" class="btn btn-primary fw-bold">
                Back to Employee List
            </a>
        </div>
    </div>
</div>